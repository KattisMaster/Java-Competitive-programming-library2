\def\categorycontentline#1#2#3#4{%
	\def\style@temp{#1}%
	\ifx \style@temp\thecategoryname
		\contentsline{#2}{#3}{#4}
	\fi
}

\def\categoryaddtocontents#1#2{\addtocontents{lop}{\protect\categorycontentline%
	{\thecategoryname}{#1}{#2}{\thepage}}}


